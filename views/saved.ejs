<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saved Medications</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        .medication-row {
            transition: background-color 0.2s;
        }
        .medication-row:hover {
            background-color: #f8f9fa;
        }
        .page-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 2rem 0;
        }
        .btn-delete {
            background: linear-gradient(45deg, #dc3545, #c82333);
            border: none;
        }
        .btn-delete:hover {
            background: linear-gradient(45deg, #c82333, #a71e2a);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-pills me-2"></i>
                Medication Search
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-search me-1"></i>
                    Search Medications
                </a>
            </div>
        </div>
    </nav>

    <div class="page-header">
        <div class="container">
            <h1 class="text-center">
                <i class="fas fa-database me-2"></i>
                Saved Medications
            </h1>
            <p class="text-center mb-0">Manage your saved medication database</p>
        </div>
    </div>

    <div class="container mt-4">
        <!-- Error Messages -->
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Search and Controls -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="GET" action="/saved" class="d-flex">
                    <input type="hidden" name="limit" value="<%= pagination.limit %>">
                    <div class="input-group">
                        <input 
                            type="text" 
                            class="form-control" 
                            name="search" 
                            placeholder="Search by name, synonym, or RxCUI..." 
                            value="<%= search %>"
                        >
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                        <% if (search) { %>
                            <a href="/saved" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i>
                            </a>
                        <% } %>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-end align-items-center">
                    <label class="me-2">Show:</label>
                    <select class="form-select form-select-sm me-3" style="width: auto;" onchange="changeLimit(this.value)">
                        <option value="5" <%= pagination.limit === 5 ? 'selected' : '' %>>5</option>
                        <option value="10" <%= pagination.limit === 10 ? 'selected' : '' %>>10</option>
                        <option value="25" <%= pagination.limit === 25 ? 'selected' : '' %>>25</option>
                        <option value="50" <%= pagination.limit === 50 ? 'selected' : '' %>>50</option>
                    </select>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Add New
                    </a>
                </div>
            </div>
        </div>

        <!-- Results Summary -->
        <% if (search) { %>
            <div class="alert alert-info">
                <i class="fas fa-search me-2"></i>
                Showing <%= pagination.totalRecords %> result(s) for "<strong><%= search %></strong>"
                <a href="/saved" class="ms-2 text-decoration-none">Clear search</a>
            </div>
        <% } %>

        <!-- Medications Table -->
        <% if (medications && medications.length > 0) { %>
            <div class="row mb-3">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4>
                            <i class="fas fa-list me-2 text-success"></i>
                            <%= search ? 'Search Results' : 'Saved Medications' %>
                            <small class="text-muted">(<%= pagination.totalRecords %> total)</small>
                        </h4>
                        <div class="text-muted">
                            Showing <%= ((pagination.currentPage - 1) * pagination.limit) + 1 %> - 
                            <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalRecords) %> 
                            of <%= pagination.totalRecords %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">RxCUI</th>
                                    <th scope="col">Generic Name</th>
                                    <th scope="col">Brand/Synonym</th>
                                    <th scope="col">Date Added</th>
                                    <th scope="col" width="100">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% medications.forEach((med, index) => { %>
                                    <tr class="medication-row" id="row-<%= med.id %>">
                                        <th scope="row"><%= ((pagination.currentPage - 1) * pagination.limit) + index + 1 %></th>
                                        <td>
                                            <span class="badge bg-primary"><%= med.rxcui %></span>
                                        </td>
                                        <td>
                                            <div class="fw-medium text-primary"><%= med.name %></div>
                                        </td>
                                        <td>
                                            <div class="text-muted"><%= med.synonym %></div>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                <%= new Date(med.created_at).toLocaleDateString() %>
                                                <%= new Date(med.created_at).toLocaleTimeString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <button 
                                                class="btn btn-delete btn-sm text-white"
                                                onclick="deleteMedication(<%= med.id %>)"
                                                title="Delete medication"
                                            >
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <% if (pagination.totalPages > 1) { %>
                <nav aria-label="Medication pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <!-- First Page -->
                        <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                            <a class="page-link" href="<%= buildPaginationUrl(1, search, pagination.limit) %>">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                        </li>
                        
                        <!-- Previous Page -->
                        <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                            <a class="page-link" href="<%= buildPaginationUrl(pagination.prevPage, search, pagination.limit) %>">
                                <i class="fas fa-angle-left"></i>
                            </a>
                        </li>

                        <!-- Page Numbers -->
                        <% 
                        const startPage = Math.max(1, pagination.currentPage - 2);
                        const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                        %>
                        
                        <% if (startPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="<%= buildPaginationUrl(1, search, pagination.limit) %>">1</a>
                            </li>
                            <% if (startPage > 2) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                        <% } %>

                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                <a class="page-link" href="<%= buildPaginationUrl(i, search, pagination.limit) %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>

                        <% if (endPage < pagination.totalPages) { %>
                            <% if (endPage < pagination.totalPages - 1) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="<%= buildPaginationUrl(pagination.totalPages, search, pagination.limit) %>">
                                    <%= pagination.totalPages %>
                                </a>
                            </li>
                        <% } %>

                        <!-- Next Page -->
                        <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                            <a class="page-link" href="<%= buildPaginationUrl(pagination.nextPage, search, pagination.limit) %>">
                                <i class="fas fa-angle-right"></i>
                            </a>
                        </li>
                        
                        <!-- Last Page -->
                        <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                            <a class="page-link" href="<%= buildPaginationUrl(pagination.totalPages, search, pagination.limit) %>">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>

                <!-- Pagination Info -->
                <div class="text-center text-muted">
                    <small>
                        Page <%= pagination.currentPage %> of <%= pagination.totalPages %> 
                        (Total: <%= pagination.totalRecords %> medications)
                    </small>
                </div>
            <% } %>

        <% } else { %>
            <!-- No medications message -->
            <div class="text-center mt-5">
                <% if (search) { %>
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No medications found</h4>
                    <p class="text-muted mb-4">No medications match your search criteria "<%= search %>"</p>
                    <a href="/saved" class="btn btn-secondary me-2">
                        <i class="fas fa-list me-1"></i>
                        Show All Medications
                    </a>
                <% } else { %>
                    <i class="fas fa-database fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No saved medications</h4>
                    <p class="text-muted mb-4">You haven't saved any medications yet.</p>
                <% } %>
                <a href="/" class="btn btn-primary btn-lg">
                    <i class="fas fa-search me-2"></i>
                    Search for Medications
                </a>
            </div>
        <% } %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirm Delete
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this medication from the database?</p>
                    <p class="text-muted small mb-0">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">
                        <i class="fas fa-trash me-1"></i>
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-check-circle me-2"></i>
                        Success
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="successMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        Error
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="errorMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        let deleteId = null;

        // Helper function to build pagination URLs
        function buildPaginationUrl(page, search, limit) {
            const params = new URLSearchParams();
            params.set('page', page);
            if (search) params.set('search', search);
            params.set('limit', limit);
            return '/saved?' + params.toString();
        }

        // Make buildPaginationUrl available globally for EJS
        window.buildPaginationUrl = buildPaginationUrl;

        function changeLimit(newLimit) {
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('limit', newLimit);
            urlParams.set('page', '1'); // Reset to first page when changing limit
            window.location.href = '/saved?' + urlParams.toString();
        }

        function deleteMedication(id) {
            deleteId = id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('confirmDelete').addEventListener('click', function() {
            if (!deleteId) return;

            // Show loading state
            const button = this;
            const originalText = button.innerHTML;
            button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Deleting...';
            button.disabled = true;

            fetch(`/delete/${deleteId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove the row from the table
                    const row = document.getElementById(`row-${deleteId}`);
                    if (row) {
                        row.remove();
                    }
                    
                    // Hide delete modal
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    
                    // Show success message
                    document.getElementById('successMessage').textContent = data.message;
                    new bootstrap.Modal(document.getElementById('successModal')).show();
                    
                    // Check if table is now empty and reload page if needed
                    const tbody = document.querySelector('tbody');
                    if (tbody && tbody.children.length === 0) {
                        setTimeout(() => {
                            location.reload();
                        }, 1500);
                    }
                } else {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    document.getElementById('errorMessage').textContent = data.message;
                    new bootstrap.Modal(document.getElementById('errorModal')).show();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                document.getElementById('errorMessage').textContent = 'An error occurred while deleting the medication.';
                new bootstrap.Modal(document.getElementById('errorModal')).show();
            })
            .finally(() => {
                // Restore button state
                button.innerHTML = originalText;
                button.disabled = false;
                deleteId = null;
            });
        });

        // Search form enhancement
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.querySelector('form[action="/saved"]');
            const searchInput = searchForm.querySelector('input[name="search"]');
            
            // Auto-submit on Enter key
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    searchForm.submit();
                }
            });
        });
    </script>

    <%
    // Define the buildPaginationUrl function for EJS
    function buildPaginationUrl(page, search, limit) {
        let url = '/saved?page=' + page + '&limit=' + limit;
        if (search) {
            url += '&search=' + encodeURIComponent(search);
        }
        return url;
    }
    %>
</body>
</html>